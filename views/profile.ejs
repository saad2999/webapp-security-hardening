<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-9">
            <!-- BIG USERNAME -->
            <div class="text-center mb-5">
                <h1 class="display-1 fw-bold text-warning mb-0">
                    <%= user.name || user.email.split('@')[0] %>
                </h1>
                <p class="text-muted fs-3">
                    <%= user.email %>
                </p>
            </div>

            <div class="row">
                <!-- BIO SECTION -->
                <div class="col-lg-7">
                    <div class="card bg-dark border-primary shadow-lg mb-4">
                        <div class="card-header bg-primary text-white">
                            <h3>Your Bio</h3>
                        </div>
                        <div class="card-body bg-black p-4 text-light" style="min-height: 200px; font-size: 1.1rem; ">
                            <% if (user.bio && user.bio.trim()) { %>
                                <%- user.bio %>
                                    <% } else { %>
                                        <em class="text-muted fs-4">No bio added</em>
                                        <% } %>
                        </div>
                    </div>

                    <!-- UPDATE BIO (XSS TEST) -->
                    <div class="card bg-dark border-warning">
                        <div class="card-header bg-warning text-dark">
                            <h4>Update Bio (Stored XSS Test)</h4>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="/update-bio">
                                <textarea name="bio" rows="6"
                                    class="form-control bg-black text-light border-secondary mb-3"
                                    placeholder="Try: <script>alert('XSS by Clearway Intern')</script>"><%= user.bio || '' %></textarea>
                                <button class="btn btn-warning btn-lg w-100">Save Bio</button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- PASSWORD CHANGE -->
                <div class="col-lg-5">
                    <div class="card bg-dark border-danger shadow-lg">
                        <div class="card-header bg-danger text-white">
                            <h4>Change Password (Vulnerable)</h4>
                        </div>
                        <div class="card-body">
                            <form method="POST" action="/change-password">
                                <div class="mb-3">
                                    <input type="password" name="newPassword" class="form-control form-control-lg"
                                        placeholder="New password" required>
                                </div>
                                <button class="btn btn-danger btn-lg w-100">Change Password</button>
                            </form>
                            <div class="mt-3 p-3 bg-black rounded">
                                <small class="text-danger">
                                    Password stored in plaintext!<br>
                                    Check DB: <code>SELECT password FROM users;</code>
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- LOGOUT -->
                    <div class="text-center mt-4">
                        <a href="/logout" class="btn btn-outline-light btn-lg px-5">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>